---
interface Props {
  src: string;
  title?: string;
  height?: string;
}

const { src, title = "MiniMo Demo", height = "260px" } = Astro.props;
---

<figure class="minimo">
  <div class="minimo__frame-wrap">
    <iframe
      src={src}
      title={title}
      loading="lazy"
      class="minimo__frame"
      style={{ height }}
    ></iframe>
  </div>
  {title && <figcaption class="minimo__caption">{title}</figcaption>}
</figure>

<style>
  .minimo {
    margin: 1.5rem 0;
  }

  .minimo__frame-wrap {
    border-radius: 0.75rem;
    overflow: hidden;
    border: 1px solid var(--sl-color-gray-5, #333);
    background: #050608;
  }

  .minimo__frame {
    display: block;
    width: 100%;
    border: none;
  }

  .minimo__caption {
    margin-top: 0.5rem;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    opacity: 0.7;
  }
</style>